<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="me.chrislane.snookerscore.Results">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winning_player"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

    <TextView
            android:text="won the frame!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/won"
            android:textSize="24sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_below="@+id/winning_player"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_one_score"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/player_one"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_two_score"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/player_two"/>

    <Button
            android:text="Share this result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_two_score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:padding="10dp"
            android:background="@drawable/rounded_button"
            android:onClick="onClickShare"
            android:id="@+id/share"/>

    <TextView
            android:text="Player 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_one"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textEnd"
            android:layout_marginEnd="37dp"
            android:layout_above="@+id/player_one_score"
            android:layout_toStartOf="@+id/scores"/>

    <TextView
            android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scores"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_above="@+id/player_one"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"/>

    <TextView
            android:text="Player 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_two"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            android:layout_marginStart="39dp"
            android:layout_above="@+id/player_two_score"
            android:layout_toEndOf="@+id/scores"/>
</RelativeLayout>
