<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="me.chrislane.snookerscore.Results">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:id="@+id/winning_player"/>

    <TextView
            android:text="won!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/winning_player"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:id="@+id/won"/>

    <TextView
            android:text="Scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/won"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:id="@+id/scores"/>

    <TextView
            android:text="Player 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scores"
            android:layout_toStartOf="@+id/scores"
            android:layout_marginEnd="39dp"
            android:layout_marginTop="28dp"
            android:id="@+id/player_one"/>

    <TextView
            android:text="Player 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/player_one"
            android:layout_toEndOf="@+id/scores"
            android:layout_marginStart="40dp"
            android:id="@+id/player_two"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/player_one"
            android:id="@+id/player_one_score"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/player_two"
            android:id="@+id/player_two_score"/>
</RelativeLayout>
