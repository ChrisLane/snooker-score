<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="me.chrislane.snookerscore.Results">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:id="@+id/winning_player"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"/>

    <TextView
            android:text="won!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/winning_player"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:id="@+id/won"
            android:textSize="24sp"
            android:textColor="?android:attr/textColorPrimary"/>

    <TextView
            android:text="Scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/won"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:id="@+id/scores"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_one_score"
            android:layout_marginTop="26dp"
            android:layout_marginStart="24dp"
            android:layout_below="@+id/player_one"
            android:layout_alignStart="@+id/player_one"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"/>

    <TextView
            android:text="Player 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_one"
            android:layout_marginStart="28dp"
            android:layout_below="@+id/scores"
            android:layout_alignParentStart="true"
            android:layout_marginTop="66dp"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"/>

    <TextView
            android:text="Player 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_two"
            android:layout_alignBaseline="@+id/player_one"
            android:layout_alignBottom="@+id/player_one"
            android:layout_toEndOf="@+id/scores"
            android:layout_marginStart="48dp"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_two_score"
            android:layout_alignBaseline="@+id/player_one_score"
            android:layout_alignBottom="@+id/player_one_score"
            android:layout_alignStart="@+id/player_two"
            android:layout_marginStart="23dp"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/textColorPrimary"/>
</RelativeLayout>
